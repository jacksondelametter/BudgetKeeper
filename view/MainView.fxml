<VBox xmlns:fx="main_vbox" fx:controller="controller.MainViewVC">
    <MenuBar>
        <Menu text="Add">
            <MenuItem fx:id="addTransaction" onAction="#addTransactionPressed" text="Transaction"/>
        </Menu>
        <Menu text="Delete">
            <MenuItem fx:id="deleteTransaction" onAction="#deleteTransactionPressed" text="Transaction"/>
        </Menu>
        <Menu text="Stats">
            <MenuItem fx:id="print_stats" onAction="#printStatsPressed" text="Print Stats"/>
        </Menu>
    </MenuBar>
    <HBox alignment="TOP_RIGHT">
        <DatePicker fx:id="datePicker" onAction="#dateSelected"/>
    </HBox>
    <SplitPane VBox.vgrow="ALWAYS">
        <VBox alignment="CENTER">
            <PieChart fx:id="budgetPieChart"/>
        </VBox>
        <VBox alignment="TOP_CENTER">
            <Text text="Total Information"/>
            <VBox fx:id="totalInformationGroup"/>
            <Text text="Income Information" />
            <VBox fx:id="incomeInformationGroup"/>
            <Text text="Receipt Information"/>
            <VBox fx:id="receiptInformationGroup"/>
        </VBox>
    </SplitPane>
</VBox>