<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Label?>
<VBox spacing="20" xmlns:fx="main_vbox" fx:controller="controller.MessageVC" alignment="TOP_CENTER">
    <ScrollPane hbarPolicy="NEVER" >
        <Label fx:id="messageField" alignment="TOP_LEFT" prefWidth="200" prefHeight="200" wrapText="true"/>
    </ScrollPane>
    <HBox alignment="TOP_CENTER">
        <Button fx:id="okButton" text="ok" onAction="#okClicked"/>
        <Button fx:id="cancelButton" text="cancel" onAction="#cancelClicked"/>
    </HBox>
</VBox>